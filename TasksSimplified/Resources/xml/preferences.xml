<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="Settings">

    <taskssimplified.helpers.IntListPreference
        android:key="ThemeSetting"
        android:title="@string/pref_theme_title"
        android:summary="@string/pref_theme_summary"
        android:entries="@array/theme_preference"
        android:entryValues="@array/theme_values_preference"
        android:dialogTitle="@string/pref_theme_title"
        android:defaultValue="0" />

    <taskssimplified.helpers.IntListPreference
        android:key="ThemeAccent"
        android:title="@string/pref_accent_title"
        android:summary="@string/pref_accent_summary"
        android:entries="@array/theme_accent_preference"
        android:entryValues="@array/theme_accent_values_preference"
        android:dialogTitle="Theme"
        android:defaultValue="2" />

    <CheckBoxPreference
              android:key="TalkBack"
              android:title="@string/pref_talkback_title"
              android:summary="@string/pref_talkback_summary"
              android:defaultValue="true" />

    <CheckBoxPreference
              android:key="KeepKeyboardUp"
              android:title="@string/pref_keyboard_title"
              android:summary="@string/pref_keyboard_summary"
              android:defaultValue="true" />


  </PreferenceCategory>

  <PreferenceCategory
        android:title="@string/about">

    <Preference
            android:title="@string/version"
            android:summary="@string/VersionNumber" />

    <PreferenceScreen
           android:title="@string/support"
           android:summary="www.TasksSimplified.com">

      <intent android:action="android.intent.action.VIEW"
              android:data="http://www.taskssimplified.com" />

    </PreferenceScreen>

    <PreferenceScreen
        android:title="Copyright (C) 2012"
       android:summary="James Montemagno - Refractored LLC">

      <intent android:action="android.intent.action.VIEW"
              android:data="http://www.refractored.com" />

    </PreferenceScreen>

    <Preference
           android:title="Written in"
           android:summary="C# with Mono for Android" />

  </PreferenceCategory>

</PreferenceScreen>